<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <fragment android:name="at.htlpinkafeld.projectmanager.gui.ProjectListFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/projList_frag" />

    <fragment android:name="at.htlpinkafeld.projectmanager.gui.ProjectDetailFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/projDetail_frag"
        tools:layout="@layout/project_detail_fragment" />

</LinearLayout>